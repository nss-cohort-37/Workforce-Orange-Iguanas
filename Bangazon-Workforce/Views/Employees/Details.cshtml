@model Bangazon_Workforce.Models.Employee

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Employee</h4>
    <hr />
    @Html.ActionLink("Assign to Training Program", "Assign", new { id = Model.Id })
    <dl class="row">
        <dt class="col-sm-2">
            First Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class="col-sm-2">
            Last Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class="col-sm-2">
            Department
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Department.Name)
        </dd>
        <dt class="col-sm-2">
            Computer
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Computer.Make)
        </dd>
        <dt class="col-sm-2">
            Training Programs
        </dt>

        <dd class="col-sm-10">
            <ul>
                @foreach (var tp in Model.TrainingPrograms)
                {

                    <li> @Html.DisplayFor(model => tp.Name)</li>
                }
            </ul>
        </dd>


    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new {id = Model.Id }) |
    <a asp-action="Index">Back to List</a>
</div>

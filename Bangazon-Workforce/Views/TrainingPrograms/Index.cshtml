@model IEnumerable<Bangazon_Workforce.Models.TrainingProgram>

@{
    ViewData["Title"] = "Index";
}
    <br />
<h1>Training Programs</h1>

<p>
    <a class="btn btn-link"
            asp-action="Create">
        Create New
    </a>
</p>
<table class="table">
    <thead>
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaxAttendees)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td>

                    @Html.ActionLink(item.Name, "Details", new { id = item.Id }, new { @class = "btn btn-link" })
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MaxAttendees)
                </td>
                <td>

                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-link" })
                </td>
            </tr>
        }


    </tbody>
    
</table>
<a class="btn btn-secondary"
    asp-action="PastTrainingPrograms">View Past Programs
</a>

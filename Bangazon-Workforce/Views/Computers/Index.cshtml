@model IEnumerable<Bangazon_Workforce.Models.Computer>

@{
    ViewData["Title"] = "Index";
}

<h1>Computers</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-controller="Computers" asp-action="Index">
    <p>
        Search Computers: <input type="text" name="searchString">
        <input type="submit" value="Filter" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Model)
            </th>
            <th>
                Employee
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>

                    @Html.ActionLink(item.Model, "Details", new { id = item.Id })
                </td>
                <td>
                    @Html.DisplayFor(model => item.Employee.FirstName)  @Html.DisplayFor(model => item.Employee.LastName)
                </td>
            </tr>
        }
    </tbody>
</table>

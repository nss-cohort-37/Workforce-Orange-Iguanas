@model IEnumerable<Bangazon_Workforce.Models.Department>

@{
    ViewData["Title"] = "Index";
}
    <br />
<h1>Departments</h1>

<p>
    <a class="btn btn-link" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Budget)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmployeeCount)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>

                    @Html.ActionLink(item.Name, "Details", new { id = item.Id }, new { @class = "btn btn-link" })
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Budget)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmployeeCount)
                </td>
            </tr>
        }
    </tbody>
</table>

@model IEnumerable<Bangazon_Workforce.Models.Computer>

@{
    ViewData["Title"] = "Index";
}
    <br />
<h1>Computers</h1>

<p>
    <a class="btn btn-link" asp-action="Create">Create New</a>
</p>
<form class="form-inline my-2 my-lg-0" asp-controller="Computers" asp-action="Index">
    <p>
        Search Computers:   <input class="form-control" type="text" name="searchString">
        <input class="btn btn-secondary" type="submit" value="Filter" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th scope="col">
                   @Html.DisplayNameFor(model => model.Model)
            </th>
            <th scope="col">
                Employee
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>

                    @Html.ActionLink(item.Model, "Details", new { id = item.Id }, new { @class="btn btn-link" })
                </td>
                <td>
                    @Html.DisplayFor(model => item.Employee.FirstName)  @Html.DisplayFor(model => item.Employee.LastName)
                </td>
            </tr>
        }
    </tbody>
</table>

@model IEnumerable<Bangazon_Workforce.Models.TrainingProgram>

@{
    ViewData["Title"] = "PastTrainingPrograms";
}

<h1>PastTrainingPrograms</h1>

<table class="table">
    <thead>
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaxAttendees)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>

            <td>
                @Html.ActionLink(item.Name, "PastDetails", new { id = item.Id })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaxAttendees)
            </td>
            <td>

            </td>
        </tr>
}
    </tbody>
</table>
<a asp-action="Index">View Future Programs</a>
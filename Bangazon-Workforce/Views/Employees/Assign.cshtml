@model Bangazon_Workforce.Models.ViewModels.AssignToProgramViewModel

@{
    ViewData["Title"] = "Assign";
}
<br/>
<h3>Assign Training Program</h3>
<hr />
<dl>
    <dt class="col-sm-2">
        Employee Name
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.EmployeeFirstName) @Html.DisplayFor(model => model.EmployeeLastName)
    </dd>
    <dt class="col-sm-2">
        Training Programs
    </dt>
   

</dl>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Assign">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <select asp-for="TrainingProgramIds" asp-items="@Model.TrainingProgramOptions" class="form-control" multiple>
                </select>
                <span asp-validation-for="TrainingPrograms" class="text-danger"></span>
                </div>
                <input type="hidden" asp-for="EmployeeId" value="@Model.EmployeeId" />

                <div class="form-group">
                    <input type="submit" value="Assign" class="btn btn-secondary" />
                </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-link" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
